    <script>
        function ValidateEmail(email) {
            if (/^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.test(email.value)) {
                document.getElementById("validation").submit()
            } else{
                alert("You have entered an invalid email address!")
                return (false)
            }
        }
    </script>
