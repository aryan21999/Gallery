        <div id="layoutSidenav_content">
            <main>
                <div class="content-page" style="margin-left: 2%;">
                    <style>
                        img#pic {
                            height: 70px;
                            /* margin-top: 30px; */
                            margin-bottom: 30px;
                        }

                        button.btn.btn-primary.btn-sm.waves-effect.waves-light {
                            margin-left: 90%;
                        }
                    </style>
                    <div class="content">
                        <div class="container-fluid">

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="page-title-box">
                                        <h4 class="page-title mt-5 mb-3">Profile Details</h4>
                                        <% if(messages.success) {%>
                                            <div class="alert alert-success" role="alert">
                                                <%= messages.success %>
                                                    <button type="button" class="close btn btn-danger" data-bs-dismiss="alert"
                                                        aria-hidden="true">×</button>
                                            </div>
                                            <% } %>
                                                <% if(messages.error) {%>
                                                    <div class="alert alert-danger d-flex justify-content-between"
                                                        role="alert">
                                                        <%= messages.error %>
                                                            <button type="button" class="close btn btn-danger"
                                                                data-bs-dismiss="alert" aria-hidden="true">×</button>
                                                    </div>
                                                    <% } %>
                                    </div>
                                </div>
                            </div>
                            <!-- end row -->

                            <div class="row">
                                <div class="col-12">
                                    <div class="card m-b-20">
                                        <div class="card-body">

                                            <form id="validation" action="/editProfile" method="POST" enctype="multipart/form-data">

                                                <div class="form-group row mb-3">
                                                    <label for="example-text-input"
                                                        class="col-sm-2 col-form-label">Name</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="text"
                                                            value="<%= getUser[0].username%>" id="example-text-input"
                                                            name="username">
                                                    </div>
                                                </div>
                                                <div class="form-group row mb-3">
                                                    <label for="emailValidate"
                                                        class="col-sm-2 col-form-label">Email</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="email"
                                                            value="<%= getUser[0].email%>" name="email"
                                                            id="emailValidate">
                                                    </div>
                                                </div>
                                                <div class="form-group row mb-3">
                                                    <label for="example-tel-input"
                                                        class="col-sm-2 col-form-label">Telephone</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="tel" minlength="10"
                                                    maxlength="10" value="<%= getUser[0].phoneNumber%>" name="phoneNumber"
                                                            id="example-tel-input">
                                                    </div>
                                                </div>
                                                <div class="form-group row mb-3">
                                                    <label for="example-tel-input"
                                                        class="col-sm-2 col-form-label">profile
                                                    </label>
                                                    <div class="col-sm-10">
                                                        <img id="pic" src="./upload/<%=profileImage%>">
                                                        <input class="form-control" type="file"
                                                            value="<%= getUser[0].profileImage%>" name="picture"
                                                            id="example-tel-input">
                                                    </div>
                                                </div>
                                                <div class="form-group row mb-3">
                                                    <label for="example-tel-input"
                                                        class="col-sm-2 col-form-label">&nbsp;
                                                    </label>
                                                    <div class="col-sm-10">
                                                        <button type="button" onclick="ValidateEmail(emailValidate)"
                                                            class="btn btn-primary waves-effect waves-light">Submit</button>
                                                    </div>
                                                </div>
                                                <!-- <button type="submit" onclick="window.open('/upload/1630054561692Screenshot from 2021-08-26 15-23-13.png')">Download!</button> -->
                                            </form>
                                        </div>
                                    </div>
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- container-fluid -->
                    </div> <!-- content -->
                </div>
