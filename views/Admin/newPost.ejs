    <script>
        function openPostDetail(data) {
            console.log(data, 'data edit candidate');
            $('#container').find('img').remove();
            $.ajax({
                url: "/getPostData",
                data: { _id: data },
                type: "GET",
                contentType: "application/json",
                success: function (response) {
                    console.log(response)
                    $(".userId").html(response._id);
                    $(".example-text-input").html(response.data.username);
                    $(".example-tel-input").html(response.data.phoneNumber);
                    $(".example-caption-input").html(response.data.caption);
                    $(".example-category-input").html(response.data.category);
                    // $('#img').html('<img src="./upload/' + response.profileImage + '" width="200px">');
                    $(".img").html('<img style="height: 80px;" src="./upload/' + response.data.postImage + '">');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    console.log(thrownError, 'error')
                    $(".example-text-input").html('');
                    $(".example-caption-input").html('');
                    $(".example-tel-input").html('');
                    $(".example-img-input").html('');
                }
            });
        }
    </script>

